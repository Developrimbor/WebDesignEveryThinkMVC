            </div>
        </div>


    <div class="form-group mt-3">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create User" class="btn btn-success btn-sm" />
        </div>
    </div>
</div>
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}