@using WebDesignEveryThinkMVC.Entity
@model Product
@{
    ViewBag.Title = "Details";
}


<div class="row">

    <div class="col-md-6">
        <img src="/Images/@Model.ProductImage" class="img-fluid rounded ">
    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-12">
                <h1>@Model.ProductName</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <span class="badge badge-primary">In Stock</span>
                <span class="product-number">#2365656</span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-12">
                <div id="description">
                    @Model.ProductDescription
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-4">
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star" aria-hidden="true"></i>
                <i class="fa fa-star" aria-hidden="true"></i>
                <i class="fa fa-star-half-o" aria-hidden="true"></i>
                <span class="badge badge-success">53</span>
            </div>
            <div id="write-review" class="col-md-4">
                <a href="#">
                    Write a review
                </a>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                <Span id="product-price">@Model.ProductPrice TL</Span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-12">

                @using (Html.BeginForm("AddToCart","Cart"))
                {
                    @Html.HiddenFor(i => i.Id)

                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-cart-plus" aria-hidden="true"></i>
                        Add To Cart
                    </button>
                }

            </div>
        </div>
    </div>
</div>
